# TheaWeb Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# Database
# For production, use PostgreSQL:
# DATABASE_URL=postgres://user:password@localhost:5432/thea

# Redis (for rate limiting in production)
# REDIS_URL=redis://localhost:6379

# Sign in with Apple
APPLE_TEAM_ID=your_team_id
APPLE_CLIENT_ID=app.thea.ios
APPLE_KEY_ID=your_key_id
# Path to your Apple private key file (.p8)
APPLE_PRIVATE_KEY_PATH=./AuthKey.p8

# Thea Backend (local Mac Studio)
THEA_BACKEND_URL=http://localhost:8081

# Cloudflare Tunnel (if using tunnel for external access)
# CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token

# Security
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=info
