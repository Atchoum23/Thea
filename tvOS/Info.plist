<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- ================================ -->
	<!-- Bundle Information               -->
	<!-- ================================ -->
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Thea TV</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>Thea TV</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>1.5.0</string>
	<key>CFBundleVersion</key>
	<string>15</string>

	<!-- ================================ -->
	<!-- App Store Category               -->
	<!-- ================================ -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.productivity</string>

	<!-- ================================ -->
	<!-- tvOS UI Configuration            -->
	<!-- ================================ -->
	<key>UILaunchScreen</key>
	<dict/>
	<key>UIUserInterfaceStyle</key>
	<string>Automatic</string>

	<!-- ================================ -->
	<!-- Privacy Usage Descriptions       -->
	<!-- ================================ -->
	<!-- Microphone (Siri Remote) -->
	<key>NSMicrophoneUsageDescription</key>
	<string>Thea uses the Siri Remote microphone for voice commands.</string>

	<!-- Siri -->
	<key>NSSiriUsageDescription</key>
	<string>Use Siri to interact with Thea on your Apple TV.</string>

	<!-- HomeKit -->
	<key>NSHomeKitUsageDescription</key>
	<string>Thea controls your smart home devices and scenes.</string>

	<!-- Local Network -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>Thea uses the local network to communicate with other devices.</string>
	<key>NSBonjourServices</key>
	<array>
		<string>_thea._tcp</string>
		<string>_thea-remote._tcp</string>
	</array>

	<!-- Bluetooth -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>Thea uses Bluetooth for game controller support.</string>

	<!-- ================================ -->
	<!-- App Transport Security           -->
	<!-- ================================ -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSAllowsLocalNetworking</key>
		<true/>
	</dict>

	<!-- ================================ -->
	<!-- Export Compliance                -->
	<!-- ================================ -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>

	<!-- ================================ -->
	<!-- Device Capabilities              -->
	<!-- ================================ -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>arm64</string>
	</array>

	<!-- ================================ -->
	<!-- Top Shelf                        -->
	<!-- ================================ -->
	<key>TVTopShelfContentProvider</key>
	<string>app.thea.tvos.TopShelfProvider</string>

	<!-- ================================ -->
	<!-- User Activities                  -->
	<!-- ================================ -->
	<key>NSUserActivityTypes</key>
	<array>
		<string>app.thea.tvos.conversation</string>
	</array>
</dict>
</plist>
