{
  "manifest_version": 3,
  "name": "Thea - AI Browser Companion",
  "version": "1.0.0",
  "description": "Complete browser protection: ad blocking, dark mode, password management, email protection, and AI assistance",
  "author": "Thea",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Thea",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "webRequest",
    "contextMenus",
    "notifications",
    "clipboardWrite",
    "alarms",
    "nativeMessaging",
    "cookies"
  ],

  "optional_permissions": [
    "history",
    "bookmarks",
    "downloads"
  ],

  "host_permissions": [
    "<all_urls>",
    "*://*.icloud.com/*",
    "*://*.icloud.com.cn/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/content-script.js",
        "content/icloud-autofill-ui.js"
      ],
      "css": ["content/content-styles.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "content/inject.js",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "blocking_rules",
        "enabled": true,
        "path": "rules/blocking-rules.json"
      }
    ]
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Alt+T"
      },
      "description": "Open Thea popup"
    },
    "toggle-dark-mode": {
      "suggested_key": {
        "default": "Alt+D",
        "mac": "Alt+D"
      },
      "description": "Toggle dark mode"
    },
    "quick-prompt": {
      "suggested_key": {
        "default": "Alt+Space",
        "mac": "Alt+Space"
      },
      "description": "Open quick prompt"
    },
    "clean-page": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "Clean page for printing"
    }
  },

  "externally_connectable": {
    "matches": ["*://localhost/*", "*://*.thea.app/*"],
    "ids": ["*"]
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "minimum_chrome_version": "102"
}
