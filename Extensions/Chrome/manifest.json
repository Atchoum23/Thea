{
  "manifest_version": 3,
  "name": "Thea",
  "version": "2.0.0",
  "description": "All-in-one browser companion: AI sidebar, dark mode (20+ themes), video speed control, ad blocking, password manager, email protection, print-friendly reader, persistent memory, and privacy shield",
  "author": "Thea",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Thea",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "webRequest",
    "contextMenus",
    "notifications",
    "clipboardWrite",
    "alarms",
    "nativeMessaging",
    "cookies",
    "sidePanel"
  ],

  "optional_permissions": [
    "history",
    "bookmarks",
    "downloads"
  ],

  "host_permissions": [
    "<all_urls>",
    "*://*.icloud.com/*",
    "*://*.icloud.com.cn/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/content-script.js",
        "content/icloud-autofill-ui.js",
        "content/dark-mode-engine.js",
        "content/video-controller.js",
        "content/print-friendly.js",
        "content/ai-sidebar.js",
        "content/privacy-shield.js",
        "content/cosmetic-filter.js",
        "content/password-enhancer.js"
      ],
      "css": ["content/content-styles.css"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/icloud-autofill-ui.js"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "content/inject.js",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "blocking_rules",
        "enabled": true,
        "path": "rules/blocking-rules.json"
      }
    ]
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Alt+T"
      },
      "description": "Open Thea popup"
    },
    "toggle-dark-mode": {
      "suggested_key": {
        "default": "Alt+D",
        "mac": "Alt+D"
      },
      "description": "Toggle dark mode"
    },
    "toggle-ai-sidebar": {
      "suggested_key": {
        "default": "Alt+Space",
        "mac": "Alt+Space"
      },
      "description": "Toggle AI sidebar"
    },
    "clean-page": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "Open reader / print-friendly view"
    },
    "toggle-video-speed": {
      "suggested_key": {
        "default": "Alt+V",
        "mac": "Alt+V"
      },
      "description": "Show video speed controller"
    }
  },

  "externally_connectable": {
    "matches": ["*://localhost/*", "*://*.thea.app/*"],
    "ids": ["*"]
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "minimum_chrome_version": "102"
}
